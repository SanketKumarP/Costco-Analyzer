{
  "manifest_version": 3,
  "name": "Costco Receipt Downloader",
  "version": "1.0",
  "description": "Download all Costco in-warehouse and gas receipts automatically.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Costco Receipts",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.costco.com/*"],
      "js": ["content.js"]
    }
  ]
}
